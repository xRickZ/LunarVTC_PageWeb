import { Image } from "astro:assets";
---

<header class="header">
    <a href="#" class="logo">
        <img src="/src/img/Logo_frase.png" alt="">
    </a>

    <nav class="navbar">
        <a href="/">Inicio</a>
        <a href="/sobrenosotros">Sobre nosotros</a>
        <a href="/gallery">Galeria</a>
        <a href="https://truckersmp.com/vtc/73288">Postularse</a>
        <a href="#">Lunar hub</a>
    </nav>

</header>

    
<style>
.header{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 0rem 20%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
    background-color: rgba(255, 255, 255, 0.027);
    backdrop-filter: blur(10px);
}

img{
    width: 100%;
    height: auto;
    max-width: 350px;
}

.navbar a{
    position: relative;
    font-size: 18px;
    color: #fff;
    font-weight: 500;
    text-decoration: none;
    margin-left: 40px;
}

.navbar a::before{
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    width: 0;
    height: 2px;
    background: #fff;
    transition: .3s;
}

.navbar a:hover::before {
    width: 100%;
}

</style>